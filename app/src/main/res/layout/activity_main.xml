<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="fill_parent"
        android:layout_height="148dp"
        android:contentDescription="@string/ImageWeather"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/weather"
        tools:srcCompat="@drawable/weather" />

    <ImageView
        android:id="@+id/imageViewCurrency"
        android:layout_width="fill_parent"
        android:layout_height="148dp"
        android:contentDescription="@string/ImageCurrency"
        app:srcCompat="@drawable/currency"
        tools:srcCompat="@drawable/currency" />

    <ImageView
        android:id="@+id/imageViewMap"
        android:layout_width="fill_parent"
        android:layout_height="148dp"
        android:contentDescription="@string/ImageMap"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/map"
        tools:srcCompat="@drawable/map" />

</LinearLayout>